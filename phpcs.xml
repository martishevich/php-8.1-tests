<?xml version="1.0"?>
<ruleset name="PSR12 Standards">
    <description>PSR12 Standards</description>
    <config name="installed_paths" value="../../slevomat/coding-standard"/>

    <arg name="report" value="full"/>
    <arg name="colors"/>
    <arg value="p"/>

    <ini name="memory_limit" value="128M"/>

    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>resources</file>
    <file>tests</file>

    <exclude-pattern>*.blade.php</exclude-pattern>

    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>database/migrations/</exclude-pattern>
    </rule>
    <rule ref="PSR12">
        <exclude name="Generic.Files.LineLength"/>
    </rule>

    <rule ref="vendor/squizlabs/php_codesniffer/src/Standards/Generic/Sniffs/PHP/ForbiddenFunctionsSniff.php">
        <properties>
            <property name="forbiddenFunctions" type="array">
                <element key="sizeof" value="count"/>
                <element key="delete" value="unset"/>
                <element key="dd"/>
                <element key="dump"/>
                <element key="var_dump"/>
                <element key="var_export"/>
                <element key="print_r"/>
            </property>
        </properties>
    </rule>
</ruleset>
